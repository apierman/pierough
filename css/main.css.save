.head-menu {
	font-family: Verdana;
	font-size: 12px;
	display: inline-block;
	border: 5px;
	float: right; 
	text-align: center;
	width: 80px;
	list-style-type: none;
	text-shadow: 2px 2px #444444;
}

.head-menu a:link, .head-menu a:visited { color: lightgray; }
.head-menu a:hover   { color: white; }

